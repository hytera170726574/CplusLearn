{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "g++", // 需与lauch.json中"preLaunchTask"项命名一致
            "type": "shell",
            "command": "C:\\mingw64\\bin\\g++.exe",
            "args": [
              //"main.cpp",
            //   "./include/Pointer/address.cpp",
            // "./include/Pointer/pointer.cpp",
            // "./include/Pointer/init_ptr.cpp",
            "./include/Pointer/use_new.cpp",
            //   "./include/Text.cpp",
              //"${file}",
              //"${fileDirname}/include//${fileBasenameNoExtension}.cpp",
              "-g",
              "-o",
              "main.exe", // 输出exe名，要与launch中调用的program项命名一致
              
              "-fexec-charset=GBK",
              "-static-libgcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            // Use the standard MS compiler pattern to detect errors, warnings and infos
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
